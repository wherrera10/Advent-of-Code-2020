
 n = 20
 θ = [0;(0.5:n-0.5)/n;1]
 φ = [(0:2n-2)*2/(2n-1);2]
 x = [cospi(φ)*sinpi(θ) for θ in θ, φ in φ]
 y = [((y1 = sinpi(φ)*sinpi(θ)) > 16) ? 16: y1 for θ in θ, φ in φ]
 z = [cospi(θ) for θ in θ, φ in φ]
 rand([-1f0, 1f0], 3)
 pts = vec(Point3f0.(x, y, z))
 surface(x, y, z, color = rand(RGBAf0, 124, 124))

