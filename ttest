
Sector() = Sector(configs["sectorchar"], configs["noballcolor"], configs["noballcolor"])

const colors = [colorant"red", colorant"green", colorant"blue", colorant"yellow"]
const nocolor = colorant"transparent"

function makegrid(height, width)
    grid = Matrix{Sector}(undef, height, width)
    grid[1, :] .= Sector(Char(configs["wallchar"]), nocolor, nocolor)
    grid[end, :] .= Sector(Char(configs["wallchar"]), nocolor, nocolor)
    grid[:, 1] .= Sector(Char(configs["wallchar"]), nocolor, nocolor)
    grid[:, end] .= Sector(Char(configs["wallchar"]), nocolor, nocolor)
    probinteriorwall = configs["percentwall"] / 100
    for i in 2:height-1, j in 2:width-1
        if rand() > probinteriorwall
            sector[i, j] = Sector(Char(configs["sectorchar"]), rand(colors, 2)...)
        else
            sector[i, j] = Sector(Char(configs["wallchar"]), nocolor, nocolor)
        end
    end
    for i in 2:height-1, j in 2:width-1 # once walls up, check for isolated sectors
         if badwall(grid, i, j)
            sector[i, j] = Sector(Char(configs["sectorchar"]), rand(colors, 2)...)
        end
    end
end    

