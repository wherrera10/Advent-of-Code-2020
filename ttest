using Gtk.ShortNames, Cairo

win = Window("Dungeon Game", 100, 150) |> (Frame() |> (vbox = Box(:v)))
but = Button("one")
push!(vbox, but)
textdisplay = ScrolledWindow()
b = TextBuffer()
b.text[String] = "test  df;lf\nda;fda;lfad \nreiprepior"
tview = TextView(b)
push!(vbox, textdisplay)
push!(textdisplay, tview)
show(tview)
