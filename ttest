using Primes

function pierponts(N, firstkind = true)
    count, k23, ret, incdec = 0, one(N), typeof(N)[], firstkind ? 1 : -1
    for k2 in 0:typemax(Int)
        for k3 in 0:k2
            if isprime(k23 + incdec)
                push!(ret, k23)
                if length(ret) >= N
                    return ret
                end
            end
            k23 *= 3
        end
        k23 *= 2
    end
    throw("Failed to find $N primes")
end

        
println("The first 50 Pierpont primes (first kind) are: ", pierponts(Int128(50)))

println("\nThe first 50 Pierpont primes (second kind) are: ", pierponts(Int128(50), false))

println("\nThe 250th Pierpont prime (first kind) is: ", pierponts(BigInt(250))[250])

println("\nThe 250th Pierpont prime (second kind) is: ", pierponts(BigInt(250), false)[250])

