function alias
    aliaschan = Channel{Char}(10)
    aliaskeyhit(w, event) = push!(aliaschan, Char(event.keyval))
    signal_connect(aliaskeyhit, win, "key-press-event")
    logln("Hit the NEW key to use as an alias:")
    newch = string(take!(aliaschan))
    logln("Hit the FORMER key that will be aliased:")
    oldch = string(take!(aliaschan))
    aliases[newch] = oldch
    signal_connect(keyhit, win, "key-press-event") #restore old handler
end
